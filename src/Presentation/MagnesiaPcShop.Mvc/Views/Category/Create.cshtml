@model MagnesiaPcShop.DataTransferObjects.Requests.Category.CreateNewCategoryRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminPageLayout.cshtml";
}

<h1>Kategori Ekleme Sayfası</h1>

<hr />
<div class="row mb-5">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <input type="submit" value="Ekle" class="btn btn-success mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye dön.</a>
</div>

