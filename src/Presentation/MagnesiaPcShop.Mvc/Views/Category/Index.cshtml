@model IEnumerable<MagnesiaPcShop.DataTransferObjects.Responses.Category.CategoryDisplayResponse>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminPageLayout.cshtml";
}

<h1 class="text-center">Kategori Yönetimi</h1>


<div class="col-8 mx-auto">
    <p>
        <a class="btn btn-success" asp-action="Create">Kategori Ekle</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    </td>
                    <td>
                        <a class="btn btn-danger delete" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            $('.delete').on('click', function () {
                return confirm("Silmek istediğinize emin misiniz?");
            });
        });
    </script>
}