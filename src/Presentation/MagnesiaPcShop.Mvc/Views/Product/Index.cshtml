@model IEnumerable<MagnesiaPcShop.DataTransferObjects.Responses.Product.ProductDisplayResponse>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminPageLayout.cshtml";
}

<h1 class="text-center">Ürün Yönetimi</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Ürün Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img src="@item.ImageUrl" style="width:100px; height:100px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit">Düzenle</a>
                    @*   @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                </td>
                <td>
                    <a class="btn btn-info" asp-action="Details">Detaylar</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
